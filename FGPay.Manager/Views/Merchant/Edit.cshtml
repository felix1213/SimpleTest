@model FGPay.Models.Merchant

@{
    ViewData["Title"] = "商户信息-修改";
    ViewData["Page"] = "Merchant";
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="MerchantUserID" class="control-label"></label>
                <input asp-for="MerchantUserID" class="form-control" readonly />
                <span asp-validation-for="MerchantUserID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PassWord" class="control-label"></label>
                <input asp-for="PassWord" class="form-control" />
                <span asp-validation-for="PassWord" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MerchantFullName" class="control-label"></label>
                <input asp-for="MerchantFullName" class="form-control" />
                <span asp-validation-for="MerchantFullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MerchantState" class="control-label"></label>
                <select asp-for="MerchantState" class="form-control" asp-items="ViewBag.State"></select>
                <span asp-validation-for="MerchantState" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrepaidRate" class="control-label"></label>
                <input asp-for="PrepaidRate" class="form-control" />
                <span asp-validation-for="PrepaidRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WithdrawalRate" class="control-label"></label>
                <input asp-for="WithdrawalRate" class="form-control" />
                <span asp-validation-for="WithdrawalRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Balance" class="control-label"></label>
                <input asp-for="Balance" class="form-control" />
                <span asp-validation-for="Balance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Md5key" class="control-label"></label>
                <input asp-for="Md5key" class="form-control" />
                <span asp-validation-for="Md5key" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Remark" class="control-label"></label>
                <input asp-for="Remark" class="form-control" />
                <span asp-validation-for="Remark" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AgentID" class="control-label"></label>
                <select asp-for="AgentID" class="form-control" asp-items="ViewBag.AgentID"></select>
                <span asp-validation-for="AgentID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="保存" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">返回列表</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
